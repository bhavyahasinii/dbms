DECLARE
  n NUMBER := 234; -- You can change this value
  sum_digits NUMBER := 0;
  r NUMBER;
BEGIN
  WHILE n > 0 LOOP
    r := MOD(n, 10);
    sum_digits := sum_digits + r;
    n := FLOOR(n / 10);
  END LOOP;
  DBMS_OUTPUT.PUT_LINE('The sum of digits is ' || sum_digits);
END;
/




CREATE TABLE DEPT (
  DEPTNO NUMBER(4) PRIMARY KEY,
  DNAME VARCHAR2(14),
  LOCATION VARCHAR2(14)
);

CREATE TABLE EMP (
  EMPNO NUMBER(6) PRIMARY KEY,
  ENAME VARCHAR2(10),
  JOB VARCHAR2(9),
  HIREDATE DATE,
  SALARY NUMBER(8,2),
  DEPTNO NUMBER(4),
  FOREIGN KEY (DEPTNO) REFERENCES DEPT(DEPTNO)
);




SELECT * FROM EMP WHERE DEPTNO IN (10, 20);

SELECT ENAME, SALARY
FROM EMP
WHERE ENAME LIKE '__A%';

SELECT DEPTNO, AVG(SALARY) AS AVG_SAL
FROM EMP
GROUP BY DEPTNO
HAVING AVG(SALARY) > 2000;

SELECT ENAME
FROM EMP
WHERE ENAME LIKE '%S';





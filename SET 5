DECLARE
  n NUMBER := 5; -- Change this for other numbers
  fact NUMBER := 1;
  i NUMBER;
BEGIN
  IF n < 0 THEN
    DBMS_OUTPUT.PUT_LINE('Factorial does not exist for negative numbers.');
  ELSIF n = 0 THEN
    DBMS_OUTPUT.PUT_LINE('Factorial of 0 is 1.');
  ELSE
    FOR i IN 1..n LOOP
      fact := fact * i;
    END LOOP;
    DBMS_OUTPUT.PUT_LINE('Factorial of ' || n || ' is ' || fact);
  END IF;
END;
/




CREATE TABLE DEPT (
  DEPTNO NUMBER(4) PRIMARY KEY,
  DNAME VARCHAR2(20),
  LOCATION VARCHAR2(20)
);

CREATE TABLE EMP (
  EMPNO NUMBER(6) PRIMARY KEY,
  ENAME VARCHAR2(50),
  JOB VARCHAR2(30),
  HIREDATE DATE,
  SALARY NUMBER(10,2),
  DEPTNO NUMBER(4)
);




ALTER TABLE DEPT ADD CONSTRAINT pk_dept PRIMARY KEY (DEPTNO);

ALTER TABLE EMP ADD CONSTRAINT pk_emp PRIMARY KEY (EMPNO);

ALTER TABLE EMP ADD CONSTRAINT fk_dept FOREIGN KEY (DEPTNO)
REFERENCES DEPT(DEPTNO);





SELECT D.DNAME, MAX(E.SALARY) AS HIGHEST_SALARY
FROM EMP E
JOIN DEPT D ON E.DEPTNO = D.DEPTNO
GROUP BY D.DNAME;

